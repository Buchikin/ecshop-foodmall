<%= render "shared/header4" %>

<%= form_with model: @seller, url: seller_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      販売者ログイン
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">店舗ID</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :store_id, class:"input-default", id:"store_id", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "販売店ログイン" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>

<div class="for-new-registration">
  <div class="for-new-registration-innner">
    未登録の方はこちらから登録してください
    <%= link_to '販売者新規登録', new_seller_registration_path , class: "for-registration-red-btn" %>
  </div>
</div>

<%= render "shared/footer2" %>